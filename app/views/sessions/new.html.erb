<% if flash[:notice] %>
<p id="flash"><%= flash[:notice]%></p>
<%end%>
<%= form_tag sessions_path do %>
<p>Email: <%= text_field_tag :email, params[:email] %></p>
<p>Password: <%= password_field_tag :password, params[:password] %></p>
<br>
<p>Remember me: <%= check_box_tag :remember_me %></p>
<%= submit_tag "Login" %>
<%end%>